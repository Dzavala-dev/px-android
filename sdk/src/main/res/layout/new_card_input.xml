<?xml version="1.0" encoding="utf-8"?>
<com.mercadopago.views.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mercadopago.views.MPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_card_number_label"/>
            <com.mercadopago.views.MPEditText
                android:id="@+id/cardNumber"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textColor="@color/abc_search_url_text_selected"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/cardholderName"
                android:maxLength="16"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mercadopago.views.MPTextView
                    android:id="@+id/cardNumberError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:textColor="@color/mpsdk_color_red_error" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mercadopago.views.MPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_cardholder_name"/>
            <com.mercadopago.views.MPEditText
                android:id="@+id/cardholderName"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:maxLength="50"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/cardExpiryDate"
                android:textSize="15sp"
                android:inputType="textVisiblePassword"
                android:textColor="@color/abc_search_url_text_selected" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mercadopago.views.MPTextView
                    android:id="@+id/cardholderNameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:textColor="@color/mpsdk_color_red_error" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mercadopago.views.MPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_card_expire_date_label"/>
            <com.mercadopago.views.MPEditText
                android:id="@+id/cardExpiryDate"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusRight="@+id/cardSecurityCode"
                android:inputType="number"
                android:textSize="15sp"
                android:textColor="@color/abc_search_url_text_selected"
                android:maxLength="4"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mercadopago.views.MPTextView
                    android:id="@+id/cardExpiryDateError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:textColor="@color/mpsdk_color_red_error" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardSecurityCodeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.mercadopago.views.MPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_security_code"/>

            <com.mercadopago.views.MPEditText
                android:id="@+id/cardSecurityCode"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:maxLength="4"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="15sp"
                android:textColor="@color/abc_search_url_text_selected" />

            <FrameLayout
                android:id="@+id/cardSecurityErrorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <com.mercadopago.views.MPTextView
                    android:id="@+id/cardSecurityCodeError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:textColor="@color/mpsdk_color_red_error" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardPaymentMethodSelectionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.mercadopago.views.MPTextView
                android:id="@+id/paymentMethodSelectorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_card_identification_type"/>

            <!-- spinner -->
            <Spinner
                android:id="@+id/cardPaymentMethodSelector"
                android:layout_width="100dp"
                android:layout_height="36dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardIdentificationTypeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.mercadopago.views.MPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/mpsdk_color_new_card_text"
                android:text="@string/mpsdk_card_identification_type"/>

            <!-- spinner -->
            <Spinner
                android:id="@+id/cardIdentificationType"
                android:layout_width="100dp"
                android:layout_height="36dp"/>

            <FrameLayout
                android:id="@+id/cardIdentificationTypeErrorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible">
                <com.mercadopago.views.MPTextView
                    android:id="@+id/cardIdentificationTypeError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:textColor="@color/mpsdk_color_red_error" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/cardIdentificationNumberContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <com.mercadopago.views.MPTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="14sp"
                            android:textColor="@color/mpsdk_color_new_card_text"
                            android:text="@string/mpsdk_card_identification_number"/>
                        <com.mercadopago.views.MPEditText
                            android:id="@+id/cardIdentificationNumber"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="2dp"
                            android:singleLine="true"
                            android:maxLength="15"
                            android:imeOptions="actionDone"
                            android:nextFocusRight="@+id/cardNumber"
                            android:textSize="15sp"
                            android:textColor="@color/abc_search_url_text_selected" />
                    </LinearLayout>



                </LinearLayout>
                <FrameLayout
                    android:id="@+id/cardIdentificationNumberErrorContainer"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:visibility="visible">
                    <com.mercadopago.views.MPTextView
                        android:id="@+id/cardIdentificationNumberCodeError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="top"
                        android:textSize="12sp"
                        android:textColor="@color/mpsdk_color_red_error" />
                </FrameLayout>
            </LinearLayout>

            <!--<FrameLayout-->
                <!--android:id="@+id/cardSubmitButtonContainer"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:layout_gravity="start">-->

                <!--<FrameLayout-->
                    <!--android:id="@+id/cardSubmitButton"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:background="@drawable/submit_button"-->
                    <!--android:onClick="onFormSubmitted">-->
                    <!--<FrameLayout-->
                        <!--android:layout_width="24dp"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="@drawable/arrow_right_white"/>-->

                <!--</FrameLayout>-->

            <!--</FrameLayout>-->
        </LinearLayout>
    </LinearLayout>

</com.mercadopago.views.CustomScrollView>