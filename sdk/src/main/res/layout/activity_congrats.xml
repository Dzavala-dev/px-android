<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mpsdk_card_margin"
            card_view:cardCornerRadius="@dimen/mpsdk_card_corner_radius"
            card_view:cardBackgroundColor="@color/mpsdk_color_congrats_background">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:tint="@color/mpsdk_color_congrats_image"
                    android:src="@drawable/ok_sign" />

                <com.mercadopago.views.MPTextView
                    android:id="@+id/resultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:text="¡Listo, se acreditó tu pago!"/>

                <com.mercadopago.views.MPTextView
                    android:id="@+id/orderDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="bottom|center"
                    android:textSize="20dp"
                    android:text="Te enviaremos los datos a"/>

                <com.mercadopago.views.MPTextView
                    android:id="@+id/emailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="bottom|center"
                    android:textSize="20dp"
                    android:text="juan-carlos@email.com"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <com.mercadopago.views.MPTextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textSize="21dp"
                android:text="terminada en 1234"
                android:drawableLeft="@drawable/master"
                android:drawablePadding="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <com.mercadopago.views.MPTextView
                    android:id="@+id/totalAmountDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textSize="27dp"
                    android:textColor="@color/mpsdk_color_congrats_installments"
                    android:text="12 de $80 00"/>

                <com.mercadopago.views.MPTextView
                    android:id="@+id/installmentsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:text="($ 960 00)"/>
            </LinearLayout>

            <com.mercadopago.views.MPTextView
                android:id="@+id/stateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="18dp"
                android:text="En tu estado de cuenta verás el cargo como MERCADOPAGO"/>

            <com.mercadopago.views.MPTextView
                android:id="@+id/acquittanceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:layout_marginTop="50dp"
                android:textSize="18dp"
                android:text="Comprobante: 123456789" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
