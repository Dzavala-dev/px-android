<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_checkout"
        tools:context="com.mercadopago.CheckoutActivity"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <include layout="@layout/shopping_cart" android:id="@+id/itemInfoLayout"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/itemInfoLayout"
                android:id="@+id/contentLayout">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mpsdk_white_background"
                    android:layout_margin="@dimen/mpsdk_card_margin"
                    card_view:cardCornerRadius="@dimen/mpsdk_card_corner_radius">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/rowsLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/list_item_height_large"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:minHeight="45dp"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxWidth="100dp"
                                    android:maxHeight="20dp"
                                    android:src="@drawable/serfin_bank_transfer"
                                    android:adjustViewBounds="true"
                                    android:id="@+id/payment_method_image"
                                    android:layout_gravity="center_vertical"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_above="@+id/payment_method_comment" />

                                <TextView
                                    android:id="@+id/payment_method_comment"
                                    android:layout_marginBottom="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Hola, soy un comentario"
                                    style="@style/mpsdk_list_label_comment"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignStart="@+id/payment_method_image"
                                    android:layout_alignLeft="@+id/payment_method_image"/>

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/edit"
                                    android:adjustViewBounds="true"
                                    android:id="@+id/imageEdit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:tint="@color/mpsdk_colorPrimary"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/rowsLayout"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:background="@color/mpsdk_color_instructions_background"
                            android:minHeight="45dp"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools">
                            <TextView
                                android:id="@+id/totalAmountText"
                                style="@style/mpsdk_regular_dark_thin"
                                android:text="@string/mpsdk_payment_amount_to_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_toRightOf="@+id/totalAmountText"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/totalAmount"
                                style="@style/mpsdk_regular_dark_thin"
                                android:text="$100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/termsAndConditions"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/mpsdk_smaller_warm_grey_thin_bold_text"/>
                <Button
                    android:id="@+id/payButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mpsdk_button_height"
                    android:text="@string/mpsdk_pay_button_text"
                    android:layout_margin="@dimen/mpsdk_margin_std"
                    style="@style/mpsdk_button_normal"/>
                <View
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/separator"
                    android:background="@color/mpsdk_separator"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal|bottom" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â© 1999-2015 Procesado por MercadoPago"
                    style="@style/mpsdk_smaller_warm_grey_thin_bold_text"/>
            </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
