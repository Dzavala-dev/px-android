<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mpsdk_color_light_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mpsdk_card_margin"
                card_view:cardCornerRadius="@dimen/mpsdk_card_corner_radius"
                card_view:cardBackgroundColor="@color/mpsdk_color_call_for_authorize_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:tint="@color/mpsdk_color_call_for_authorize_image"
                        android:src="@drawable/call_sign"
                        android:layout_gravity="center_horizontal" />

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/authorizeDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="bottom|center"
                        android:textSize="24dp"
                        android:text="@string/mpsdk_title_activity_call_for_authorize" />

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/paymentAmountDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:textSize="24dp"
                        android:text="@string/mpsdk_title_amount_call_for_authorize" />

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/mercadoPagoDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:textSize="24dp"
                        android:text="@string/mpsdk_text_mercado_pago" />

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/emailOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="bottom|center"
                        android:textSize="19dp"
                        android:text="@string/mpsdk_text_order_call_for_authorize" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/mpsdk_color_light_grey"
                android:orientation="vertical">

                <com.mercadopago.views.MPTextView
                    android:id="@+id/authorized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="18dp"
                    android:text="@string/mpsdk_text_authorized_call_for_authorize"
                    android:textColor="@color/mpsdk_color_link" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/mpsdk_color_light_grey"
                    android:orientation="vertical">

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/noAuthorized"
                        android:layout_width="fill_parent"
                        android:gravity="bottom|center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:text="@string/mpsdk_text_question_call_for_authorize" />

                    <com.mercadopago.views.MPTextView
                        android:id="@+id/selectPaymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/mpsdk_color_link"
                        android:text="@string/mpsdk_text_select_other_payment_method" />

                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/mpsdk_separator"
                        android:layout_gravity="center_horizontal|bottom" />

                </LinearLayout>

                <com.mercadopago.views.MPTextView
                    android:id="@+id/exitOfCallForAuthorize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="@string/mpsdk_text_go_out"
                    android:textColor="@color/mpsdk_color_link"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>