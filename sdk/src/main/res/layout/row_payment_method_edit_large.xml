<RelativeLayout
    android:id="@+id/paymentMethodLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height_large"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:minHeight="45dp"
    android:background="@color/mpsdk_white_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxHeight="30dp"
        android:src="@drawable/cargavirtual"
        android:adjustViewBounds="true"
        android:id="@+id/image"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/comment"/>

    <com.mercadopago.views.MPTextView
        android:text="Carga Virtual"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        style="@style/mpsdk_list_label"
        android:id="@+id/description"
        android:layout_alignBottom="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image" />

    <com.mercadopago.views.MPTextView
        android:id="@+id/comment"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/image"
        android:layout_alignLeft="@+id/image"
        tools:text="Hola, soy un comentario"
        app:fontStyle="regular"
        style="@style/mpsdk_list_label_comment"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:id="@+id/imageEdit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:tint="@color/mpsdk_colorPrimary"/>
</RelativeLayout>