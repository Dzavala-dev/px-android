<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mpsdkRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/mpsdkLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"/>

    <com.mercadopago.views.MPTextView
        android:id="@+id/mpsdkErrorMessage"
        android:layout_width="wrap_content"
        android:gravity="bottom|center"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        tools:text="Sin conexiÃ³n"
        android:layout_gravity="center_horizontal|top"
        android:textSize="25dp"
        android:textColor="#999999"
        android:layout_above="@+id/mpsdkErrorImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp" />

    <ImageView
        android:id="@+id/mpsdkErrorImage"
        android:tint="@color/mpsdk_warm_grey"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/ic_refresh"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/mpsdkLinearLayout"
        android:layout_centerHorizontal="true" />

    <com.mercadopago.views.MPTextView
        android:id="@+id/mpsdkErrorRetry"
        android:layout_width="wrap_content"
        android:gravity="bottom|center"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        tools:text="@string/mpsdk_refresh_message"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/mpsdkLinearLayout"
        android:layout_centerHorizontal="true"
        android:textColor="#999999"
        android:textSize="20dp"
        android:layout_marginTop="55dp" />

</RelativeLayout>