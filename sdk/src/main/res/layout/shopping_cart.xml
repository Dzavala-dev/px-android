<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/filled_arrow_up"
        android:tint="@color/mpsdk_shopping_cart_background"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mpsdk_shopping_cart_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="7dp">
        <ImageView
            android:id="@+id/itemImage"
            android:src="@drawable/regular_payment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/itemTitle"
            android:text="Prueba"
            style="@style/mpsdk_list_label"
            android:textColor="@color/mpsdk_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemImage"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/itemAmount"
            android:text="$100"
            style="@style/mpsdk_list_label"
            android:textColor="@color/mpsdk_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTitle"
            android:layout_alignStart="@+id/itemTitle"
            android:layout_alignLeft="@+id/itemTitle"/>
    </RelativeLayout>
</RelativeLayout>
