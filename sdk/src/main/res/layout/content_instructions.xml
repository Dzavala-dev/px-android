<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mercadopago.InstructionsActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:showIn="@layout/activity_instructions"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mpsdk_color_instructions_background">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="213dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="25dp"
                android:background="@color/mpsdk_color_instructions_title_background">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cash_sign"
                    android:id="@+id/imageCashSign"
                    android:tint="@color/mpsdk_color_instructions_title_image"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/mpsdk_large_label"
                    android:id="@+id/title"
                    android:layout_below="@+id/imageCashSign"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/bottomCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:background="@color/mpsdk_white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mpsdk_small_dark_light"
                        android:id="@+id/primaryInfo"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/referencesLayout"
                        android:orientation="vertical"/>
                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/button_instructions"
                            android:layout_width="174dp"
                            android:layout_height="36dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textAllCaps="false"
                            android:id="@+id/actionButton"
                            style="@style/mpsdk_instructions_button_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/mpsdk_color_instructions_background"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mpsdk_small_dark_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondaryInfo"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/mpsdk_small_grey_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tertiaryInfo"
                        android:text="Te enviamos los datos por mail"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/accreditationImage"
                            android:src="@drawable/time"
                            android:maxWidth="16dp"
                            android:maxHeight="16dp"
                            android:adjustViewBounds="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:tint="@color/mpsdk_color_instructions_font"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/accreditationMessage"
                            style="@style/mpsdk_small_golden_light"
                            android:text="Se acreditara en X horas"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/accreditationImage"
                            android:layout_toEndOf="@+id/accreditationImage"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/separator"
                android:background="@color/mpsdk_separator"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal|bottom" />
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mpsdk_processed_by_mercado_pago"
                style="@style/mpsdk_smaller_warm_grey_thin_bold_text"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>