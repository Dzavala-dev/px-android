<LinearLayout
    android:id="@+id/paymentMethodLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:minHeight="45dp"
    android:background="@color/mpsdk_white_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.99"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/visa"
                    android:adjustViewBounds="true"
                    android:id="@+id/image"
                    android:layout_centerVertical="true"/>
                <com.mercadopago.views.MPTextView
                    tools:text="@string/mpsdk_last_digits_label"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/mpsdk_list_label"
                    android:id="@+id/description"
                    android:layout_toEndOf="@+id/image"
                    android:layout_toRightOf="@+id/image"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_right"
            android:adjustViewBounds="true"
            android:id="@+id/editHint"
            android:tint="@color/mpsdk_colorPrimary"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:background="@color/mpsdk_separator"/>
</LinearLayout>